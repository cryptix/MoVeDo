#!/bin/sh
# Builds a PDF out of a Markdown file.
# We do that with Pandoc.
#
# This is part of the [MoVeDo](https://github.com/movedo) project.
# See LICENSE.md for copyright information.

script_dir_rel=`dirname $0`
script_dir=`cd ${script_dir_rel}; pwd`
. "${script_dir}/_common.sh"

tools=""
tools="$tools pandoc" # for PDF generation
_check_tools $tools
_check_env

# parameters
h1_page_breaks=true

if _contains_word "--no-h1-page-breaks" "$@"
then
	h1_page_breaks=false
fi

cd "$gen_src_dir"

echo
echo "Generating PDF ..."
mkdir -p "$pdf_dir"
pandoc_extra=""

if [ -e "$biblography_file" ]
then
	pandoc_extra="$pandoc_extra --bibliography $biblography_file --filter pandoc-citeproc"
fi

if $h1_page_breaks
then
	# with this. Latex adds a page-break before every level 1 header
	pandoc_extra="$pandoc_extra -V documentclass=report"
fi

pandoc \
	--from=markdown \
	--to=latex \
	--standalone \
	--atx-headers \
	--table-of-contents \
	--metadata date="`date -u '+%Y-%m-%d'`" \
	--output="$single_pdf" \
	$pandoc_extra \
	$@ \
	"$single_md"

echo "PDF file generated: '$single_pdf'"

if [ -n "$OPEN_X11" ]
then
	xdg-open "$single_pdf"
fi

